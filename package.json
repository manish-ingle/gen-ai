{
  "name": "gen-ai-training",
  "version": "1.0.0",
  "description": "Gen AI Training Repository",
  "main": "index.js",
  "private": true,
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "chat-bot:backend:build": "cd chat-bot/backend && nest build",
    "chat-bot:backend:format": "cd chat-bot/backend && prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "chat-bot:backend:start": "cd chat-bot/backend && nest start",
    "chat-bot:backend:start:dev": "cd chat-bot/backend && nest start --watch",
    "chat-bot:backend:start:debug": "cd chat-bot/backend && nest start --debug --watch",
    "chat-bot:backend:start:prod": "cd chat-bot/backend && node dist/main",
    "chat-bot:backend:lint": "cd chat-bot/backend && eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "chat-bot:backend:test": "cd chat-bot/backend && jest",
    "chat-bot:backend:test:watch": "cd chat-bot/backend && jest --watch",
    "chat-bot:backend:test:cov": "cd chat-bot/backend && jest --coverage",
    "chat-bot:backend:test:debug": "cd chat-bot/backend && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "chat-bot:backend:test:e2e": "cd chat-bot/backend && jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "ai": "^5.0.106",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "chat-bot/backend/src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "chat-bot/backend/**/*.(t|j)s"
    ],
    "coverageDirectory": "chat-bot/backend/coverage",
    "testEnvironment": "node"
  }
}
